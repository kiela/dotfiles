#!/usr/bin/env sh

alias zshconfig='vim $HOME/.zshrc'
alias ohmyzsh='vim $HOME/.oh-my-zsh'

alias c=clear
alias cc=clear
alias la='ls -a'
alias lf='ls -Fa'
alias ll='ls -alF'
alias sl=ls
alias sls=ls
alias lh='ls -lh'
alias l='ls -CF'
alias ..='cd ..'
alias cd..='cd ..'
alias .='cd $HOME'
alias h='history 25'
alias j='jobs -l'
alias x=exit

alias df='df -h'
alias du='du -h'
alias duh='du -H'
alias r='source $HOME/.zshrc'

alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'
alias rgrep='clear && grep --exclude-dir=log --exclude-dir=tmp --exclude-dir=test --exclude-dir=spec'
alias memsql='mysql -P 3307 --prompt="memsql> "'
alias topcommands='history | sed "s/^[0-9 ]*//" | sed "s/ *| */\n/g" | awk "{print \$1}" | sort | uniq -c | sort -rn'
alias top10='topcommands | head -n 10'
alias top25='topcommands | head -n 25'
alias netcons='lsof -i -nP'

alias wruby='cd $HOME/workspace/ruby'
alias werl='cd $HOME/workspace/erlang'

killemall () {
  if [ ! -z $1 ]; then
    ps aux | grep $1 | grep -v grep | awk '{print $2}' | xargs kill -9
    echo "killed 'em all!"
  fi
}

extract () {
  if [ -f $1 ]; then
    case $1 in
      *.tar.bz2)  tar -jxvf $1        ;;
      *.tar.gz)   tar -zxvf $1        ;;
      *.bz2)      bzip2 -d $1         ;;
      *.gz)       gunzip -d $1        ;;
      *.tar)      tar -xvf $1         ;;
      *.tgz)      tar -zxvf $1        ;;
      *.zip)      unzip $1            ;;
      *.Z)        uncompress $1       ;;
      *.rar)      unrar x $1            ;;
      *)          echo "'$1' Error. Unsupported filetype." ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}
