#!/usr/bin/env sh

alias c='clear'
alias cc='clear'
alias sl='ls'
alias sls='ls'
alias la='ls -a'
alias lf='ls -Fa'
alias ll='ls -alF'
alias lh='ls -lh'
alias l='ls -CF'
alias ..='cd ..'
alias cd..='cd ..'
alias scd='cd'
alias .='cd $HOME'
alias h='history 25'
alias j='jobs -l'
alias x='exit'
alias df='df -h'
alias du='du -h'
alias duh='du -H'
alias v='VBoxManage'

alias erl='erl -config ~/.erlang-hist.config'

alias r='source $HOME/.zshrc'
alias rgrep='grep --exclude-dir=coverage --exclude-dir=log --exclude-dir=tmp --exclude-dir=app/assets'
alias crgrep='clear && rgrep'
alias topcmds='history | sed "s/^[0-9 ]*//" | sed "s/ *| */\n/g" | awk "{print \$1}" | sort | uniq -c | sort -rn'
alias topcmds10='topcommands | head -n 10'
alias topcmds25='topcommands | head -n 25'
alias netcons='lsof -i -nP'

alias wruby='cd $HOME/workspace/ruby'
alias wgems='cd $HOME/workspace/ruby/gems'
alias werl='cd $HOME/workspace/erlang'
alias wex='cd $HOME/workspace/elixir'
