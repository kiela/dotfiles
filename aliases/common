#!/usr/bin/env sh

alias c='clear'
alias cc='clear'
alias sl='ls'
alias sls='ls'
alias la='ls -a'
alias lf='ls -Fa'
alias ll='ls -alF'
alias lh='ls -lh'
alias l='ls -CF'
alias ..='cd ..'
alias cd..='cd ..'
alias scd='cd'
alias .='cd $HOME'
alias x='exit'
alias df='df -h'
alias du='du -h'
alias duh='du -H'
alias grpe='grep' # I'm just sloppy sometimes
alias cgrep='clear && grep'
alias cgrpe='cgrep'
alias rm='rm -v'
alias netcons='lsof -i -nP'
alias wr='cd ~/workspace'

if type youtube-dl &> /dev/null; then
  alias youtube-dl="youtube-dl -f best"
fi
